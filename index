  <main class="main" aria-live="polite">
    <section class="card">
      <h1 class="quote" id="msg">Loading…</h1>
      <div class="author" id="by"></div>
      <div class="date" id="when"></div>
    </section>
    <p class="footer">Made with ❤️ for <span id="recipient">you</span></p>
  </main>
  <script>
    const START_DATE = '2025-08-01';
    const RECIPIENT  = 'her';
    const messages = [
      { text: "My heart is so full of you I can hardly call it my own.", author: "Liana Rădulescu" },
      { text: "I love loving you. Simple as that.", author: "— Carl" },
      { text: "No matter the miles, you’re my next-door heartbeat.", author: "— Carl" },
      { text: "Study hard, dream big. I’m cheering for you every day.", author: "— Carl" },
      { text: "I’d pick you. In every universe.", author: "— Carl" }
    ];
    document.getElementById('recipient').textContent = RECIPIENT;
    const msgEl=document.getElementById('msg'), byEl=document.getElementById('by'), whenEl=document.getElementById('when');
    function pickIndex(n){ const d=Math.floor((new Date()-new Date(START_DATE+'T00:00:00'))/86400000); return ((d%n)+n)%n; }
    function render(m){ msgEl.textContent='“'+m.text+'”'; byEl.textContent=m.author||''; whenEl.textContent=new Date().toLocaleDateString(undefined,{weekday:'long',year:'numeric',month:'long',day:'numeric'}); }
    (function(){ try{ render(messages[pickIndex(messages.length)]) } catch(e){ msgEl.textContent="I love you more than my code skills."; byEl.textContent="— Carl"; } })();
  </script>
