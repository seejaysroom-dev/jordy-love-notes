  <style>
    :root { --ink:#222; --accent:#ff6b8a; }
    *{ box-sizing:border-box; }
    body{
      margin:0; min-height:100dvh; display:grid; place-items:center;
      background:#ffb9c9; /* solid pink background */
    }
    .main{ max-width:900px; padding:2rem; text-align:center; }
    .card{ background:rgba(255,255,255,.85); border:2px solid var(--accent); border-radius:24px; padding:3rem 1.5rem; box-shadow:0 10px 30px rgba(0,0,0,.15);}
    .quote{ font-family:'Playfair Display',serif; font-size:clamp(28px,6vw,56px); line-height:1.15; color:var(--ink); margin:0 auto 1rem; position:relative; }
    .quote::before{ content:'“'; font-size:1.3em; position:absolute; left:-.2em; top:-.25em; color:var(--accent); opacity:.35; }
    .author{ font-family:'Poppins',system-ui,sans-serif; font-weight:700; letter-spacing:.12em; color:var(--ink); opacity:.85; }
